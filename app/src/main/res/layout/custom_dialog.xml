<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addbill_addpayee_dialogue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/Light">


    <EditText
        android:id="@+id/addbill_addpayee_dialogue_payeeinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:text="Payee Name" />

    <Button
        android:id="@+id/addbill_addpayee_dialogue_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_align="@id/addbill_addpayee_dialogue_payeeinput"
        android:layout_marginTop="8dp"
        android:text="OK"
        android:background="@color/Lightest"
        />

</LinearLayout>